---
layout: page
title: Perintah
icon: code
pagination:
  data: collections.perintah
  size: 10
  reverse: true
  alias: perintah
permalink: "c/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
---

<section id="content" class="body">
    <div class="row">
        {%- for post in pagination.items -%}
        <div class="col-lg-6">
            <a href="{{ post.url }}" class="mw-full text-decoration-none border m-5 p-0 d-flex">

                <div class="flex-grow-1 d-flex align-items-center">
                    <div class="p-10 w-full m-auto">
                        <p class="m-0 font-weight-bold text-dark-lm text-light-dm">
                            {{ post.data.title }}
                        </p>
                        <p class="m-0 mt-5 text-muted font-size-12">
                            > {{ post.data.description }}
                        </p>
                    </div>
                </div>
            </a>
        </div>
        {%- endfor -%}
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination text-center">
            {% if pagination.previous %}
            <li class="page-item">
                <a href="{{ pagination.previous  | remove: 'index.html' | remove: '.html' }}" class="page-link">
                    <i class="bi bi-caret-left" aria-hidden="true"></i>
                </a>
            </li>
            {% endif %}
            {% if pagination.next %}
            <li class="page-item">
                <a href="{{ pagination.next  | remove: 'index.html' | remove: '.html' }}" class="page-link">
                    <i class="bi bi-caret-right" aria-hidden="true"></i>
                </a>
            </li>
            {% endif %}
        </ul>
    </nav>
</section>